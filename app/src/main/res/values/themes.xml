    <style name="materialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="elevation">3dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/buttonBorderColor</item>
        <item name="strokeWidth">1.25dp</item>
        <item name="android:shadowColor">@color/social_media_color</item>
        <item name="backgroundColor">@color/social_media_color</item>
        <item name="borderWidth">5dp</item>
        <item name="textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
    </style>
    <style name="materialButtonWhiteBackground" parent="Widget.MaterialComponents.Button">
        <item name="elevation">3dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/social_media_color</item>
        <item name="background">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>


